<form action="/todo/<%= @item.id %>" method="post">
  <div class="modal-header">
    <h5 class="modal-title">Todo <%= @item.new ? "create" : "edit" %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <label for="title">Title</label>
      <input name="title" id="title" type="text" class="form-control" value="<%= @item.title %>">
    </div>
    <% unless @item.new %>
      <div class="form-check">
        <input type="checkbox" <%= @item.done != '0' ? "checked" : "" %> class="form-check-input" name="done" id="done">
        <label for="done" class="form-check-label">Done</label>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-success" value="Save">
  </div>
</form>